{
  "name": "docs",
  "private": true,
  "scripts": {
    "dev": "dotenv -e ./.env -e ../../.env -- next dev --turbopack --port 3000",
    "build": "dotenv -e ./.env -e ../../.env -- next build",
    "start": "dotenv -e ./.env -e ../../.env -- next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "@types/mdx": "2.0.13",
    "fumadocs-core": "16.0.1",
    "fumadocs-mdx": "13.0.0",
    "fumadocs-ui": "16.0.1",
    "next": "16.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "dotenv": "17.2.3",
    "dotenv-cli": "10.0.0",
    "next-runtime-env": "3.3.0"
  }
}
